<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bus Routes Map</title>
    <script src='https://api.mapbox.com/mapbox-gl-js/v2.6.1/mapbox-gl.js'></script>
    <link href='https://api.mapbox.com/mapbox-gl-js/v2.6.1/mapbox-gl.css' rel='stylesheet' />
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body { margin: 0; padding: 0; }
        #map { position: absolute; top: 0; bottom: 0; width: 100%; }
    </style>
</head>
<body>
    <div id="map"></div>
    <script>
        mapboxgl.accessToken = 'YOUR_MAPBOX_ACCESS_TOKEN'; // Replace with your Mapbox access token

        // Define unique colors for each route
        const routeColors = ['#FF5733', '#33FF57', '#5733FF']; // Add more colors as needed

        // Initialize map
        var map = new mapboxgl.Map({
            container: 'map',
            style: 'mapbox://styles/mapbox/streets-v11',
            center: [80.190381, 13.100852], // Center the map on a default location
            zoom: 10 // Adjust the zoom level as needed
        });

        // Add markers for bus stops with unique colors for each route
        const busRoutesData = []; // Populate this array with your bus routes data

        busRoutesData.forEach((route, index) => {
            const color = routeColors[index % routeColors.length]; // Get a color from the routeColors array
            route.stops.forEach(stop => {
                new mapboxgl.Marker({
                    color: color
                })
                .setLngLat([stop.coordinates[0], stop.coordinates[1]])
                .setPopup(new mapboxgl.Popup().setHTML(`<h3>${stop.name}</h3><p>${stop.time}</p>`))
                .addTo(map);
            });
        });
    </script>
</body>
</html>

